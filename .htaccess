# T0p1 Firmware Web Flasher - Apache Configuration
# Optimized for Performance & SEO

# ===== COMPRESSION =====
# Habilitar compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ===== BROWSER CACHING =====
# Cache Control para mejor performance
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML - No cache (para actualizaciones inmediatas)
    ExpiresByType text/html "access plus 0 seconds"
    
    # CSS y JavaScript - 1 mes
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Imágenes - 1 año
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Archivos binarios - 1 mes (firmware)
    ExpiresByType application/octet-stream "access plus 1 month"
    
    # JSON - 1 día
    ExpiresByType application/json "access plus 1 day"
</IfModule>

# ===== SECURITY HEADERS =====
<IfModule mod_headers.c>
    # Prevenir ataques XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self' https://unpkg.com; script-src 'self' 'unsafe-inline' https://unpkg.com; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:;"
    
    # CORS para ESP Web Tools
    # Header set Access-Control-Allow-Origin "*"
</IfModule>

# Redirección de index.php a index.html (opcional)
DirectoryIndex index.html index.php

# Proteger archivos sensibles
<FilesMatch "\.(md|log|ps1|bat)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Permitir acceso a archivos binarios .bin
<FilesMatch "\.bin$">
    Header set Content-Type "application/octet-stream"
    Header set Content-Disposition "attachment"
</FilesMatch>

# Rewrite rules (si usas URLs amigables)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /WebFlasher/
    
    # Redirigir www a no-www (si aplica)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ http://%1/$1 [R=301,L]
    
    # Forzar HTTPS (si aplica en producción)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Deshabilitar listado de directorios
Options -Indexes

# Página de error 404 personalizada (opcional)
# ErrorDocument 404 /WebFlasher/404.html

# Límite de tamaño de archivo (aumentar si .bin es muy grande)
php_value upload_max_filesize 10M
php_value post_max_size 10M
